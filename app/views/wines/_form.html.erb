<%= form_for(@wine) do |f| %>
  <% if @wine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@wine.errors.count, "error") %> prohibited this wine from being saved:</h2>

      <ul>
      <% @wine.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>: <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :grapes %>: <%= f.text_field :grapes %>
  </div>
  <div class="field">
    <%= f.label :country %>: <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label :region %>: <%= f.text_field :region %><a href="#" id="sub_region_link">add sub-region</a>
  </div>
  <div class="field" id="sub_region_field">
    <%= f.label :sub_region %>: <%= f.text_field :sub_region %>
  </div>
  <div class="field">
    <%= f.label :stored, 'In Cellar?' %>: <%= f.check_box :stored %>
  </div>
  <div class="field">
    <%= f.label :winery %>: <%= f.text_field :winery %>
  </div>
  <div class="field">
    <%= f.label :vintage %>: <%= f.text_field :vintage %>
  </div>
  <div class="field">
    <%= f.label :location %>: <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :type %>: <%= f.text_field :type %>
  </div>
  <div class="field">
    <%= f.label :price %>: <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :catalog %>: <%= f.text_field :catalog %>
  </div>
  <div class="field">
    <%= f.label :purchase_date %>: <%= f.text_field :purchase_date, :class => 'date_picker' %>
  </div>
  <div class="field">
    <%= f.label :drink_date %>: <%= f.text_field :drink_date, :class => 'date_picker' %>
  </div>
  <div class="field">
    <%= f.label :with_meal %>: <%= f.select :with_meal, [['', nil], ['Yes', true], ['No', false]] %>
  </div>
  <div class="field">
    <%= f.label :meal %>: <%= f.text_field :meal %>
  </div>
  <div class="field">
    <%= f.label :notes %>: <%= f.text_area :notes %>
  </div>
  <div class="field">
    <%= f.label :rating %>: <%= f.select :rating, [['', nil], ['1 Star', 1], ['2 Stars', 2], ['3 Stars', 3], ['4 Stars', 4], ['5 Stars', 5]] %>
  </div>
  <div class="field">
    <%= f.label :num_bottles %>: <%= f.number_field :num_bottles %>
  </div>
  <div class="field">
    <%= f.label :abv %>: <%= f.text_field :abv %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
