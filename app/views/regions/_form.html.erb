<%= form_for(@region) do |f| %>
	<% if @region.errors.any? %>
		<div id="error_explanation">
			<h2>Please fix the below errors before continuing:</h2>
			<ul>
				<% @region.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<table>
	<tbody>
		<tr>
			<td>
				<div class="field">
					Country:
				</div>
			</td>
			<td>
        		<%= f.collection_select(:country_id, Country.all.order(:name), :id, :name, {include_blank: ''})%>
			</td>
		</tr>
		<tr>
			<td>
				<div class="field">
					Province:
				</div>
			</td>
			<td>
        		<%= f.grouped_collection_select :province_id, Country.all.order(:name), :provinces, :name, :id, :name, {include_blank: ''} %>
        		<% #f.grouped_collection_select :state_id, Country.order(:name), :states, :name, :id, :name, include_blank: true %>
			</td>
		</tr>
		<tr>
			<td>
				<div class="field">
					Name:
				</div>
			</td>
			<td>
				<%= f.text_field :name %>
			</td>
		</tr>
		<tr>
			<td colspan="2" id="centered_row">
				<div class="actions">
					<%= f.submit 'Submit' %>
				</div>
			</td>
		</tr>
	</tbody>
	</table>
<% end %>