<section>
	<h1>Editing wine</h1>
	<br>

	<div id="wine_info_form">
		<%= render 'form' %>
	</div>

	<div class="button">
		<%= link_to 'Show', @wine %>
	</div>

	<div class="spacer"></div>

	<div class="button">
		<% if params[:status] == "cellared" %>
			<%= link_to 'Back', wines_path(:status => "cellared") %>
		<% else %>
			<%= link_to 'Back', wines_path(:status => "cataloged") %>
		<% end %>
	</div>

</section>