<%= form_for(@user) do |f| %>
	<% if @user.errors.any? %>
		<div id="error_explanation">
			<h2>Please fix the below errors before continuing:</h2>
			<ul>
				<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<table>
	<tbody>
		<tr>
			<td>
				<div class="field">
					<%= f.label :first_name, 'First Name:' %>
				</div>
			</td>
			<td>
				<%= f.text_field :first_name %>
			</td>
		</tr>
		<tr>
			<td>
				<div class="field">
					<%= f.label :last_name, 'Last Name:' %>
				</div>
			</td>
			<td>
				<%= f.text_field :last_name %>
			</td>
		</tr>
		<tr>
			<td>
				<div class="field">
					<%= f.label :email, 'Email:' %>
				</div>
			</td>
			<td>
				<%= f.email_field :email %>
			</td>
		</tr>
		<tr>
			<td>
				<div class="field">
					<%= f.label :username, 'Username:' %>
				</div>
			</td>
			<td>
				<%= f.text_field :username %>
			</td>
		</tr>
		<tr>
			<td>
				<div class="field">
					<%= f.label :password, 'Password:' %>
				</div>
			</td>
			<td>
				<%= f.password_field :password %>
			</td>
		</tr>
		<tr>
			<td>
				<div class="field">
					<%= f.label :password_confirmation, 'Confirm Password:' %>
				</div>
			</td>
			<td>
				<%= f.password_field :password_confirmation %>
			</td>
		</tr>
		<tr>
			<td colspan="2" id="signup_button">
				<div class="actions">
					<%= f.submit 'Submit' %>
				</div>
			</td>
		</tr>
	</tbody>
	</table>
<% end %>